<h1>Listing hits</h1>

<table>
  <tr>
    <th width="10%">Date</th>
    <th width="10%">Time</th>
    <th width="10%">Ip</th>
    <th width="10%">Host</th>
    <!--
    <th width="20%" colspan=3>Browser</th>
    -->
    <th width="60%">Referrer url</th>
    <th width="60%">Hit url</th>
  </tr>

<% @hits.each do |hit| %>
  <tr>
    <td><%= hit.created_at.strftime("%m/%d") %></td>
    <td><%= hit.created_at.strftime("%H:%M") %></td>
    <td><%= hit.ip %></td>
    <td><%= hit.host %></td>
    <!--
    <td><%= hit.browser_name %></td>
    <td><%= hit.browser_version %></td>
    <td><%= hit.browser_platform %></td>
    -->
    <td><%= hit.referrer_url.url %></td>
    <td><%= hit.url %></td>
    <td><%= link_to 'x', hit, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

