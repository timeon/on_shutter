<div class="question-summary narrow" id="question-summary-<%=post.id%>">
   
    <div class="votes">
      <div class="mini-counts"> <b><%= post.votes.length %></b> </div>
      <div> votes </div>
    </div>

    <div class="status answered">
      <div class="mini-counts"> <%= post.send(@responses_name).length %> </div>
      <div> <%= @responses_display_name %> </div>
    </div>

    <div class="views">
      <div class="mini-counts warm"> <span> <%= post.view_count %></span></div>
      <div class="warm"> views </div>
    </div>

  <div class="summary">

	<% if post.respond_to?(:image) %>
    <div class="thumb_image"> 
    	<%= link_to image_tag(post.image.url(:thumb)), post.show_path %>
    </div>
    <% end %>

    <div>
      <div><h3> <%= link_to  truncate(sanitize(post.title), :length => 50),
                        post, 
                        :class => "question-hyperlink", 
                        :title => sanitize(post.title) %> </h3></div>

      <div class="trancated_body"> <%= post.body ? truncate(strip_tags(post.body).gsub("&nbsp;", " "), :length => 100) : "" %> </div>

      <div class="user-action-time">
        <%= post.user ? link_to(post.user.display_name, user_path(post.user)) : "" %>
        <% if false%> 
        <span class="relativetime"><%= time_ago_in_words(post.created_at) %></span> ago
        <% end %>
      </div>
  
    </div>

<% if false %>
    <div class="tags t-app t-website t-mobile">
      <a href="/questions/tagged/app" class="post-tag required-tag" title="" rel="tag">app</a> <a href="/questions/tagged/website" class="post-tag" title="show questions tagged 'website'" rel="tag">website</a> <a href="/questions/tagged/mobile" class="post-tag" title="show questions tagged 'mobile'" rel="tag">mobile</a>
    </div>

    <div class="started">
      <a href="/questions/36/stackmobile-com-view-stackexchange-sites-on-your-smartphone/?lastactivity" class="started-link">
        <span title="2011-04-05 02:34:17Z" class="relativetime">apr 5 at 2:34</span>
      </a>
    </div>
<% end %>

  </div>
</div>

<br class="cbt">
