<%= content_for :title do %>Log In<% end %>
<%= content_for :subheader do %><h1>Log In</h1><% end %>

<%= content_for :main do %>
  <table>
	<tr>
		<td>
		  <%= devise_error_messages! %>
		  <%= form_for resource, :url => session_path(resource_name) do |f| -%>
		
	          <br><label>Login or Email</label><br>
	          <%= f.text_field 'login' %><br><br>
	
	          <label>Password</label><br>
	          <%= f.password_field 'password' %><br>
		
		      <% if devise_mapping.rememberable? -%>
		        <p><%= f.check_box :remember_me %> <%= f.label :remember_me %></p>
		      <% end -%>
		
		      <%= f.submit "Log in", :class=>"submit", :name=>"commit", :type=>"submit", :value=>"Log In" %><br><br><br>
		      
			  Don't have an account yet?<br>
			  <%= link_to 'Sign Up', new_user_registration_path %><br>
			  <br><br>
			  
			  Forgot your password?<br>
			  <%= link_to 'Reset Password', new_password_path(resource_name) %><br>
			  <br><br>
		      
		  <% end -%>
		</td>
		
		<td width="100px"></td>
		<td><%= render "/services/services_list" %></td>
	</tr>
  </table>
    
<% end %>
