<% post_info_id = "post_info_" + post.id.to_s %>
<% edit_post_id = "edit_post_" + post.id.to_s %>

<div class="post-menu">
  <% if false %>
    <a href="/questions/6/stacky-a-net-client-library-now-supports-1-1/1939#1939" title="permalink to this answer" id="link-post-1939">link</a>
    <span class="lsep">|</span>

    <a id="flag-post-1939" title="flag this post for serious problems or moderator attention">flag</a>
    <span class="lsep">|</span>
  <% end %>

  <% if admin? or current_user == post.user %>
    <% if @response_count == 0 %>
      <%= link_to 'delete', post, :confirm => "Delete this #{@post_name}?", :method => :delete %>
      <span class="lsep">|</span>
    <% end%>
    
    <%= link_to "edit", "##{edit_post_id}", :title => "Edit this post", :onClick=>"show_edit_post_form('#{post.id}')" %>

    <% if admin? %>
      <span class="lsep">|</span>
      <%= link_to "full edit", @post.edit_path, :title => "Edit this post"  %>
    <% end %>  

    <% if not @post.respond_to? (:album) %>
      <span class="lsep">|</span>
      Move to: <%= best_in_place @post, :album_id, :type => :select, :collection => @post.user.albums.collect {|a| [ a.id, a.title.gsub("'", " ") ] } %>
      <br>
    <% end%>
    
  <% end%>
</div>

