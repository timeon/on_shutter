<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
<html>
<head>
  <meta http-equiv="content-type" content="text/html; charset=utf-8" /> 
  <meta name="Keywords" content="<%= yield :keywords %>,<%= configatron.keywords %>"/> 
  <meta name="Description" content="<%= yield :description %> - <%= configatron.description %>, <%= configatron.motto %>"/> 
  
  <title><%= yield :title%> - <%= configatron.site_name %></title>
  
  <link rel="shortcut icon" href="/images/<%=configatron.site_name.downcase%>_icon_16.ico?v=2">
  <link rel="apple-touch-icon" href="/images/<%=configatron.site_name.downcase%>_icon_96.png">

  <%= stylesheet_link_tag("template", :media => "all") %>
  <%= stylesheet_link_tag("onshutters", :media => "all") %>
  <%= stylesheet_link_tag("services", :media => "all") %>
  <%= stylesheet_link_tag("best_in_place", :media => "all") %>

  <%= javascript_include_tag 'application', 'data-turbolinks-track' => false %>
  <%= javascript_include_tag 'best_in_place', 'data-turbolinks-track' => false %>
  <%= javascript_include_tag 'onshutters', 'data-turbolinks-track' => false %>
  <%= csrf_meta_tags %>
  
  
  <%= render 'layouts/user_css' %>
  
  <%= yield :style %>
 
  <script src="http://js.nicedit.com/nicEdit-latest.js" type="text/javascript"></script>
  <script type="text/javascript">bkLib.onDomLoaded(textarea_to_editor);</script>

  <%= csrf_meta_tag %>
  
  <script type="text/javascript">
    <%= yield :script %>
  </script>  
  
  <%= render 'shared/google_analytics' %>  
</head>

<body>
  <noscript> <div id="noscript-padding"></div> </noscript>

  <%= render 'layouts/notification' %>

  <div id="overlay-header"></div>
  <div id="custom-header"></div>
  
  <div class="container">
    <div id="header_wrap">
      <div id="header">
        <%= render 'layouts/top_bar' %>
        <%= render 'layouts/logo' %>
        <% if false %> <%= render 'layouts/symbol' %> <% end %>
        <%= render 'layouts/menu' %>
      </div>
    </div>
    
    <div id="content">
      <div class="subheader"><%= yield :subheader %> <%= yield :tabs %> </div>
      <div id="mainbar-full"><%= yield%></div>
      <div id="mainbar">     
        <%= yield :main%>
        <% if configatron.ads %>
          <%= render 'layouts/ad_728x90_text_image' %>
        <% end %>
      </div>
      <div id="sidebar">
        <%= yield :side %>
        <% if configatron.ads %>
          <%= render 'layouts/ad_300x250_text_image' %>
        <% end %>
      </div>
      <br class="cbt">
    </div>
    
    <%= render 'layouts/footer' %>
  </div>

  <noscript>
    <div id="noscript-warning">
      <%= configatron.site_name %> works best with JavaScript enabled
    </div>
  </noscript>

</body>
</html>
